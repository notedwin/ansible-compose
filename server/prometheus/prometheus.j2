global:
  # How frequently to scrape targets by default.
  scrape_interval: 45s

scrape_configs:
  - job_name: caddy
    static_configs:
      - targets: ['{{ ansible_default_ipv4.address }}:2019']

  - job_name: "prometheus"
    static_configs:
    - targets: ["localhost:9090"]

  - job_name: "node"
    static_configs:
    - targets: ["node_exporter:9100"]

  - job_name: "OpenWRT"
    static_configs:
    - targets: ["192.168.0.1:9100"]